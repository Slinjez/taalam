{% extends "layouts/baselayout.html.twig" %}

{% block head %}
	{{ parent() }}
{% endblock %}


{% block mainContent %}


	<!-- Start Banner Area -->
	<div class="banner-area bg-color-f3f9f8 pt-15 pb-100">
		<div class="container-fluid">
			<div class="row align-items-center">
				<div class="col-lg-6">
					<div class="banner-content">
						<h1>Nature Your Kids at
							<span>TAALAM</span>
							CARE</h1>
						<p>Let kids play.</p>

						<div class="banner-btn">
							<a href="/current-activities" class="default-btn">
								<i class="ri-arrow-right-s-line"></i>
								Upcoming Activities
							</a>
							<a href="#" class="default-btn active">
								<i class="ri-send-plane-fill"></i>
								Contact Us
							</a>
						</div>
					</div>
				</div>

				<div class="col-lg-6">
					<div class="banner-img">
						<img src="{{asset('resources/skin/assets/images/banner/banner-img.png')}}" alt="Image">
						<img src="{{asset('resources/skin/assets/images/banner/banner-img-shape.png')}}" class="banner-img-shape" alt="Image">
					</div>
				</div>
			</div>
		</div>
		<div class="banner-bottom-shape">
			<img src="{{asset('resources/skin/assets/images/banner/bottom-shape.png')}}" alt="Image">
		</div>
		<div class="shape shape-1" data-speed="0.04" data-revert="true">
			<img src="{{asset('resources/skin/assets/images/banner/shape-1.png')}}" alt="Image">
		</div>
		<div class="shape shape-2" data-speed="0.05" data-revert="true">
			<img src="{{asset('resources/skin/assets/images/banner/shape-2.png')}}" alt="Image">
		</div>
		<div class="shape shape-3" data-speed="0.06" data-revert="true">
			<img src="{{asset('resources/skin/assets/images/banner/shape-3.png')}}" alt="Image">
		</div>
		<div class="shape shape-4" data-speed="0.07" data-revert="true">
			<img src="{{asset('resources/skin/assets/images/banner/shape-4.png')}}" alt="Image">
		</div>
		<div class="shape shape-5" data-speed="0.08" data-revert="true">
			<img src="{{asset('resources/skin/assets/images/banner/shape-5.png')}}" alt="Image">
		</div>
		<div class="shape shape-6" data-speed="0.09" data-revert="true">
			<img src="{{asset('resources/skin/assets/images/banner/shape-6.png')}}" alt="Image">
		</div>
	</div>
	<!-- End Banner Area -->

	<!-- Start Our Features Area -->
	<div class="our-features-area pt-50 pb-70">
		<div class="container">
			<div class="section-title">
				<span class="top-title">Customer Commitment</span>
				<h2>OUR CORE VALUES</h2>
			</div>

			<div class="row justify-content-center">


				{% for page_value in page_values %}
					{% set counter = ( counter | default(0) ) + 1 %}

					<div class="col-lg-3 col-sm-6">
						<div class="single-features-item">
							<i class="flaticon-insurance-policy"></i>
							<h3>{{ page_value.question }}</h3>
							<p>{{ page_value.answer }}</p>
						</div>
					</div>

				{% endfor %}

			</div>
		</div>
	</div>
	<!-- End Our Features Area -->

	<!-- Start About Area -->
	<div class="about-area bg-color-f8f8f8 pt-100 pb-70">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6">
					<div class="about-content mr-15">
						<span class="top-title hide-me">ABOUT Taalam</span>
						<h2>Why Choose Us</h2>

						<ul>
							{% for why_us in why_uses %}
								{% set counter = ( counter | default(0) ) + 1 %}
								<li>
									<i class="flaticon-insurance-3"></i>
									<h3>{{ why_us.question }}</h3>
									<p>{{ why_us.answer }}</p>
								</li>
							{% endfor %}
						</ul>

					</div>
				</div>

				<div class="col-lg-6">
					<div class="about-img ml-15 mb-0">
						<div class="row align-items-center">
							<div class="col-lg-6 col-sm-6">
								<div class="about-1">
									<img src="{{asset('resources/skin/assets/images/about/about-1.jpg')}}" alt="Image">
								</div>
								<div class="about-2">
									<img src="{{asset('resources/skin/assets/images/about/about-2.jpg')}}" alt="Image">
								</div>
							</div>
							<div class="col-lg-6 col-sm-6">
								<div class="about-3">
									<img src="{{asset('resources/skin/assets/images/about/about-3.jpg')}}" alt="Image">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End About Area -->

	<!-- Start Services Area -->
	<div class="services-area ptb-100">
		<div class="container">
			<div class="section-title">
				<span class="top-title hide-me">INSURANCE SERVICES</span>
				<h2>Event Categories</h2>
			</div>

			<div class="services-slide owl-carousel owl-theme">

				{% for list_service in list_services %}
					<div class="single-services-item bg-1 style-three d-flex align-items-end" style="background-image:url({{list_service.desc_picture}})">
						<div class="services-contents">
							<ul>
								<li>{{list_service.service_name}}</li>
							</ul>
							<h3>
								<a href="/current-activities?attr-ref={{list_service.record_id}}">{{list_service.service_name}}</a>
							</h3>
						</div>
					</div>
				{% endfor %}
			</div>

			<div class="view-all hide-me">
				<p>More details?
					<a href="#">View All</a>
				</p>
			</div>
		</div>
	</div>
	<!-- End Services Area -->

	<div class="our-team-area ptb-100">
		<div class="container">
			<div class="section-title">
				<span class="top-title">Coaches Corner</span>
				<h2>Meet Our Team Experts &amp;Well Experiences Members</h2>
			</div>

			<div class="row justify-content-center">


				{% for cow in cows %}
					{% set trainer_rating = cow.trainer_rating %}
					<div class="col-lg-3 col-sm-6">
						<div class="single-team-item" style="text-align: center;">
							<img src="{{asset('resources/skin/images/testimonial/1.png')}}" class="cow-img" alt="Image">

							<div class="team-content single-review-item">


								<h3>{{cow.user_name}}</h3>

								<ul>
									{% for i in 1..trainer_rating %}
										<li>
											<i class="ri-star-fill"></i>
										</li>
									{% endfor %}


								</ul>

								<ul>
									{{cow.award_text}}
								</ul>
							</div>
						</div>
					</div>
				{% endfor %}


				<div class="col-12 hide-me">
					<div class="view-all">
						<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quis placerat arcu nibh sed placerat elementum. Urna eu et purus et mi sit rhoncus
							<a href="team.html">View All</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Start Subscribe Area -->
	<div class="subscribe-area pt-50 pb-100">
		<div class="container">
			<div class="section-title ">
				<span class="top-title ">What would you like to know more about?</span>
				<h2>Talk To Us</h2>
				<p>You can also reach us via Mobile: +254 712 345 678 or Email: info@taalamcare.com</p>
				<div case-studies-details-img>
					<ul class="admin">
						<li class="social">
							{# <span>SHARE :</span> #}
							<a href="https://www.facebook.com/" target="_blank" class="social-bolden">
								<i class="ri-facebook-fill"></i>
							</a>
							<a href="https://twitter.com/talamu_sports" target="_blank" class="social-bolden">
								<i class="ri-twitter-fill"></i>
							</a>
							<a href="https://api.whatsapp.com/send?phone=11165458856" target="_blank" class="social-bolden">
								<i class="ri-whatsapp-fill"></i>
							</a>
							<a href="https://www.instagram.com/" target="_blank" class="social-bolden">
								<i class="ri-instagram-line"></i>
							</a>
						</li>
					</ul>
				</div>
			</div>

			<div class="subscribe-content">

				<div class="col-12">
					<div class="col-12 alerts-div">
						<div class="col-md-1"></div>
						<div class="col-md-10">
							<div class="removeLoginMessages"></div>
							<div class="ajaxLoginloader"></div>
						</div>
						<div class="col-md-1"></div>
					</div>
				</div>
				<form method="post" action="#" id="contact-form">
					<div class="row ">

						<div class="col-lg-6 col-md-6 col-sm-12  pb-15">
							<input class="form-control" type="text" id="contact-name" name="username" placeholder="Name" required>
						</div>

						<div class="col-lg-6 col-md-6 col-sm-12  pb-15">
							<input class="form-control" type="email" id="contact-email" name="email" placeholder="Email" required>
						</div>

						<div class="col-lg-6 col-md-6 col-sm-12  pb-15">
							<input class="form-control" type="text" id="contact-phone" name="phone" placeholder="Phone" required>
						</div>

						<div class="col-lg-6 col-md-6 col-sm-12  pb-15">
							<input class="form-control" type="text" id="contact-subject" name="subject" placeholder="Subject" required>
						</div>

						<div class="  col-lg-12 col-md-12 col-sm-12 pb-15">
							<textarea class="form-control" rows="4" id="contact-message" name="message" placeholder="Your Message..."></textarea>
						</div>

						<div class="  col-lg-12 col-md-12 col-sm-12 pb-15">
							<div class="btn-three-outer">
								<button class="theme-btn btn-style-three clientlogin-btn default-btn" id="clientlogin-btn" type="submit" name="submit-form">
									<i class="ri-send-plane-2-line"></i>
									<span class="txt">SEND MESSAGE</span>
								</button>
							</div>
						</div>


					</div>


				</form>

				<img src="{{asset('resources/skin/assets/images/subscribe-shape-1.png')}}" alt="Image" class="shape shape-1" data-speed="0.04" data-revert="true">
				<img src="{{asset('resources/skin/assets/images/subscribe-shape-2.png')}}" alt="Image" class="shape shape-2" data-speed="0.04" data-revert="true">
			</div>
		</div>
	</div>


{% endblock %}
