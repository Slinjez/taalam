{% extends "layouts/portallayout.html.twig" %}

{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('resources/portal/plugins/notifications/css/lobibox.min.css') }}"/>
	<style>
		.footer {
			position: relative;
		}
	</style>
	<style>
		.footer {
			position: relative;
		}
	</style>
{% endblock %}


{% block mainContent %}

	<body
		class="bg-theme bg-theme1">
		<!-- wrapper -->
		<div
			class="wrapper">
			<!--sidebar-wrapper-->
			{% block sidenav %}
				{{ parent() }}
			{% endblock %}
			<!--end sidebar-wrapper-->
			<!--header-->
			{% block topnav %}
				{{ parent() }}
			{% endblock %}
			<!--end header-->
			<!--page-wrapper-->
			<!--page-wrapper-->
				<div
				class="page-wrapper"> <!--page-content-wrapper-->
				<div class="page-content-wrapper">
					<div
						class="page-content">
						<!--breadcrumb-->
						<div class="mb-3 page-breadcrumb d-none d-md-flex align-items-center">
							<div class="pr-3 breadcrumb-title">Chaperone Management</div>
							<div class="pl-3">
								<nav aria-label="breadcrumb">
									<ol class="p-0 mb-0 breadcrumb">
										<li class="breadcrumb-item">
											<a href="/client-dash">
												<i class='bx bx-home-alt'></i>
											</a>
										</li>
										<li class="breadcrumb-item active" aria-current="page">Chaperone Management</li>
									</ol>
								</nav>
							</div>
							<div class="ml-auto hide-me">
								<div class="btn-group">
									<button type="button" class="btn btn-light">New Chaperone</button>
									<button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
										<span class="sr-only">Toggle Dropdown</span>
									</button>
									<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
										<a class="dropdown-item" href="javascript:;">Add new Chaperone</a>
									</div>
								</div>
							</div>
						</div>
						<!--end breadcrumb-->
						<div class="user-profile-page">
							<div class="card radius-15">
								<div
									class="card-body">

									<!--end row-->
									<ul class="nav nav-pills">
										<li class="nav-item">
											<a class="nav-link active" id="profile-tab" data-toggle="tab" href="#Biography">
												<span class="p-tab-name">Details</span>
												<i class='bx bxs-user-rectangle font-24 d-sm-none'></i>
											</a>
										</li>
										<li class="nav-item hide-me">
											<a class="nav-link" data-toggle="tab" href="#Edit-Profile">
												<span class="p-tab-name">Edit Profile</span>
												<i class='bx bx-message-edit font-24 d-sm-none'></i>
											</a>
										</li>
									</ul>
									<div class="mt-3 tab-content">
										<div class="tab-pane fade show active" id="Biography">
											<div class="row">
												<div class="col-lg-4">
													<div class="mb-0 border shadow-none card">
														<div class="card-body">
															<h5 class="mb-3">New Chaperone</h5>
														</div>
														<div class="card-body">
															<div class="col-12">
																<div class="col-12 alerts-div">
																	<div class="col-md-1"></div>
																	<div class="col-md-10">
																		<div class="removebioMessages"></div>
																		<div class="ajaxbioloader"></div>
																	</div>
																	<div class="col-md-1"></div>
																</div>
															</div>
															<form id="bio-form" action="#">
																<div class="form-body">
																	<div class="row">
																		<div class="col-12 col-lg-12 border-right">
																			<div class="form-row">
																				<div class="form-group col-md-12">
																					<label>Full Name</label>
																					<input id="client-full-name" type="text" value="" class="form-control">
																				</div>
																			</div>
																			<div class="form-row">
																				<div class="form-group col-md-12">
																					<label>Relationship</label>
																					<input id="relationship" type="text" value="" class="form-control">
																				</div>
																			</div>
																			<div class="form-row">
																				<div class="form-group col-md-12">
																					<label>Phone Number</label>
																					<input id="phonenumber" type="text" value="" class="form-control">
																				</div>
																			</div>
																			<div class="form-row">
																				<div class="form-group col-md-12">
																					<label>Email</label>
																					<input id="email" type="text" value="" class="form-control">
																				</div>
																			</div>
																			<div class="form-row">
																				<div class="form-group col-md-12">
																					<label>Area of residence</label>
																					<input id="location" type="text" value="" class="form-control">
																				</div>
																			</div>
																		</div>
																	</div>
																</div>
																<div class="mt-3 btn-group w-100">
																	<button id="clientbio" type="submit" class="btn btn-light btn-block clientbio-btn">Add Chaperone</button>
																	<button type="submit" class="btn btn-light clientbio-btn clientbio-btn-ico">
																		<i class="lni lni-arrow-right"></i>
																	</button>
																</div>
															</form>
														</div>
													</div>
												</div>
												<div class="col-lg-8">
													<div class="mb-0 border shadow-none card radius-15">
														<div class="card-body">
															<h5 class="mb-3">Registered Chaperone</h5>

															<hr/>
															<div class="table-responsive">

																<table id="my-sessions" class="table table-striped table-bordered table-hover" style="width:100%">
																	<thead>
																		<tr>
																			<th>Chaperone Name</th>
																			<th>Status</th>
																			<th>Action</th>
																		</tr>
																	</thead>
																	<tbody></tbody>

																</table>
															</div>
															<hr>
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="tab-pane fade" id="Edit-Profile">
											<div class="mb-0 border shadow-none card radius-15">
												<div class="card-body">
													<div class="col-12">
														<div class="col-12 alerts-div">
															<div class="col-md-1"></div>
															<div class="col-md-10">
																<div class="removebioMessages"></div>
																<div class="ajaxbioloader"></div>
															</div>
															<div class="col-md-1"></div>
														</div>
													</div>
													
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!--end page-content-wrapper-->
			</div>
			<!--end page-wrapper-->
		</div>
	</body>
	<!--header-->

	<!--modals-->
	<div class="modal fade" id="preview" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-lg modal-dialog-scrollable">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Preview</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="col-12">
						<p>
							<strong>Name</strong>
						</p>
						<p id="preview-name"></p>
						<p>
							<strong>Relationship</strong>
						</p>
						<p id="disp-relationship"></p>

						
						<p>
							<strong>Phone Number</strong>
						</p>
						<p id="display_phonenumber"></p>

						<p>
							<strong>Email</strong>
						</p>
						<p id="disp-email"></p>

						
						<p>
							<strong>Location</strong>
						</p>
						<p id="disp-location"></p>
						
						
						<p>
							<strong>Created on</strong>
						</p>
						<p id="disp-display_date"></p>
						
						
					</div>

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
					<a id="edit-kid" href="#" id="new-event" class="btn btn-light new-event-btn">Edit</a>
				</div>
			</div>
		</div>
	</div>
	<!--modals-->

	<!--end header-->
{% endblock %}
{% block pageScripts %}
	<!--Data Tables js-->
	<script src="{{ asset('resources/portal/plugins/datatable/js/jquery.dataTables.min.js') }}"></script>

	<script src="{{ asset('resources/portal/plugins/notifications/js/lobibox.min.js') }}"></script>
	<script src="{{ asset('resources/portal/func/kids/kids_chaperone.js') }}"></script>


{% endblock %}
