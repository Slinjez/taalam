{% extends "layouts/portallayout.html.twig" %}

{% block head %}
	{{ parent() }}
	<style>
		.footer {
			position: relative;
		}
	</style>
{% endblock %}


{% block mainContent %}

	<body
		class="bg-theme bg-theme1">
		<!-- wrapper -->
		<div class="wrapper">
			<!--sidebar-wrapper-->
			{% block sidenav %}
				{{ parent() }}
			{% endblock %}
			<!--end sidebar-wrapper-->
			<!--header-->
			{% block topnav %}
				{{ parent() }}
			{% endblock %}
			<!--end header-->
			<!--page-wrapper-->
			<!--page-wrapper-->
				<div class="page-wrapper"> <!--page-content-wrapper-->
				<div class="page-content-wrapper">
					<div
						class="page-content">
						<!--breadcrumb-->
						<div class="mb-3 page-breadcrumb d-none d-md-flex align-items-center">
							<div class="pr-3 breadcrumb-title">{{page_name}}</div>
							<div class="pl-3">
								<nav aria-label="breadcrumb">
									<ol class="p-0 mb-0 breadcrumb">
										<li class="breadcrumb-item">
											<a href="/client-dash">
												<i class='bx bx-home-alt'></i>
											</a>
										</li>
										<li class="breadcrumb-item active" aria-current="page">{{page_description}}</li>
									</ol>
								</nav>
							</div>
						</div>
						<!--end breadcrumb-->
						<div class="card">
							<div class="card-body">
								<div class="card-title">
									<h4 class="mb-0">{{page_description}}</h4>
								</div>
								<hr/>
								<div class="table-responsive">
								
									<table id="my-sessions" class="table table-striped table-bordered table-hover" style="width:100%">
										<thead>
											<tr>
												<th>Event</th>
												<th>Booking Date</th>
												<th>Start Date</th>
												<th>End Date</th>
												<th>Number of sessions</th>
												<th>Cost</th>
												<th>Status</th>
												<th>Action</th>
											</tr>
										</thead>
										<tbody>
										
										</tbody>
										<!--<tfoot>
											<tr>
												<th>Shelf</th>
												<th>Item Description</th>
												<th>Shelved On</th>
												<th>Available Units</th>
											</tr>
										</tfoot>-->
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!--end page-content-wrapper-->
			</div>
			<!--end page-wrapper-->
		</div>
	</body>
	<!--header-->

	<!--end header-->
{% endblock %}
{% block pageScripts %}
		<!--Data Tables js-->
		<script src="{{ asset('resources/portal/plugins/datatable/js/jquery.dataTables.min.js') }}"></script>
		
		<script src="{{ asset('resources/portal/func/sessions/view-sessions.js') }}"></script>
		

{% endblock %}