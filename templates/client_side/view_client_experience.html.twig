{% extends "layouts/portallayout.html.twig" %}

{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('resources/portal/plugins/notifications/css/lobibox.min.css') }}"/>
{% endblock %}


{% block mainContent %}

	<body
		class="bg-theme bg-theme1">
		<!-- wrapper -->
		<div
			class="wrapper">
			<!--sidebar-wrapper-->
			{% block sidenav %}
				{{ parent() }}
			{% endblock %}
			<!--end sidebar-wrapper-->
			<!--header-->
			{% block topnav %}
				{{ parent() }}
			{% endblock %}
			<!--end header-->
			<!--page-wrapper-->
			<!--page-wrapper-->
				<div
				class="page-wrapper"> <!--page-content-wrapper-->
				<div class="page-content-wrapper">
					<div
						class="page-content">
						<!--breadcrumb-->
						<div class="mb-3 page-breadcrumb d-none d-md-flex align-items-center">
							<div class="pr-3 breadcrumb-title">{{page_name}}</div>
							<div class="pl-3">
								<nav aria-label="breadcrumb">
									<ol class="p-0 mb-0 breadcrumb">
										<li class="breadcrumb-item">
											<a href="/client-dash">
												<i class='bx bx-home-alt'></i>
											</a>
										</li>
										<li class="breadcrumb-item active" aria-current="page">{{page_description}}</li>
									</ol>
								</nav>
							</div>
						</div>
						<!--end breadcrumb-->
						
                        <div class="col-12">
							<p class="rating-feedback"></p>
							<input type="hidden" id="trainer-id-rate">
							<div class="form-row rating rating-sel">
								<label>
									<input type="radio" name="stars" value="1"/>
									<span class="icon">★</span>
								</label>
								<label>
									<input type="radio" name="stars" value="2"/>
									<span class="icon">★</span>
									<span class="icon">★</span>
								</label>
								<label>
									<input type="radio" name="stars" value="3"/>
									<span class="icon">★</span>
									<span class="icon">★</span>
									<span class="icon">★</span>
								</label>
								<label>
									<input type="radio" name="stars" value="4"/>
									<span class="icon">★</span>
									<span class="icon">★</span>
									<span class="icon">★</span>
									<span class="icon">★</span>
								</label>
								<label>
									<input type="radio" name="stars" value="5"/>
									<span class="icon">★</span>
									<span class="icon">★</span>
									<span class="icon">★</span>
									<span class="icon">★</span>
									<span class="icon">★</span>
								</label>
							</div>
							<div class="form-row">
								<div class="col-12">
									<div class="form-group col-12">
										<label>Description</label>
										<textarea class="form-control" rows="4" cols="50" id="extra-info"></textarea>
									</div>
								</div>
							</div>
						</div>

						<hr/>

					</div>
				</div>
			</div>
			<!--end page-content-wrapper-->
		</div>
		<!--end page-wrapper-->
	</body>
</div></body><!--header--><!--end header-->{% endblock %}{% block pageScripts %}<!--Data Tables js-->
<script src="{{ asset('resources/portal/plugins/datatable/js/jquery.dataTables.min.js') }}">
<script src="{{ asset('resources/portal/plugins/notifications/js/lobibox.min.js') }}"></script>
</script><script src="{{ asset('resources/portal/func/testimonial/testimonials.js') }}"></script>

{% endblock %}
