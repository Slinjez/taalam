{% extends "layouts/portallayout.html.twig" %}

{% block head %}
	{{ parent() }}
	<style>
		.hide-me {
			display: none;
		}
		{
			# .footer {
				position: relative;
			} #
		}
	</style>
{% endblock %}


{% block mainContent %}

	<body
		class="bg-theme bg-theme1">
		<!-- wrapper -->
		<div
			class="wrapper">
			<!--sidebar-wrapper-->
			{% block sidenav %}
				{{ parent() }}
			{% endblock %}
			<!--end sidebar-wrapper-->
			<!--header-->
			{% block topnav %}
				{{ parent() }}
			{% endblock %}
			<!--end header-->
			<!--page-wrapper-->
			<div
				class="page-wrapper">
				<!--page-content-wrapper-->
				<div class="page-content-wrapper">
					<div class="page-content">
						<div class="row">
							<div class="col-12 col-lg-4">
								<div class="card radius-15">
									<div class="card-body">
										<div class="d-flex align-items-center">
											<div>
												<h2 class="mb-0 text-white" id="service-count">-
												</h2>
											</div>
											<div class="ml-auto text-white font-35">
												<i class="bx bx-cart-alt"></i>
											</div>
										</div>
										<div class="d-flex align-items-center">
											<div>
												<p class="mb-0 text-white">Services Offered</p>
											</div>
											<div class="ml-auto text-white font-14">
												<a href="/client-vw-services-offered">
													<small>View</small>
												</a>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-12 col-lg-4">
								<div class="card radius-15">
									<div class="card-body">
										<div class="d-flex align-items-center">
											<div>
												<h2 class="mb-0 text-white" id="session-count">-
												</h2>
											</div>
											<div class="ml-auto text-white font-35">
												<i class='bx bx-calendar-week'></i>
											</div>
										</div>
										<div class="d-flex align-items-center">
											<div>
												<p class="mb-0 text-white">My Training Sessions</p>
											</div>
											<div class="ml-auto text-white font-14">
												<a href="/client-vw-sessions">
													<small>View</small>
												</a>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-12 col-lg-4">
								<div class="card radius-15">
									<div class="card-body">
										<div class="d-flex align-items-center">
											<div>
												<h2 class="mb-0 text-white" id="payments">-
												</h2>
											</div>
											<div class="ml-auto text-white font-35">
												<i class="bx bx-money"></i>
											</div>
										</div>
										<div class="d-flex align-items-center">
											<div>
												<p class="mb-0 text-white">Payments Done</p>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!--end row-->

						<div class="row">

							<div class="col-12 col-lg-12">
								<div class="card radius-15">
									<div class="card-header border-bottom-0">
										<div class="d-flex align-items-center">
											<div>
												<h5 class="mb-0">My Training Schedule</h5>
											</div>
											<div class="ml-auto">
												<a href="/client-vw-sessions" type="button" class="btn btn-light radius-15">View All</a>
											</div>
										</div>
									</div>
									<div class="p-0 card-body">

										<div class="col-12 row">
											<div class="table-responsive">
												<table id="my-sessions" class="table table-striped table-bordered table-hover" style="width:100%">
													<thead>
														<tr>
															<th>Event</th>
															<th>Booking Date</th>
															<th>Start Date</th>
															<th>End Date</th>
															<th>Number of sessions</th>
															<th>Cost</th>
															<th>Status</th>
															<th>Action</th>
														</tr>
													</thead>
													<tbody></tbody>
												</table>
											</div>
										</div>
									</div>
								</div>

							</div>
						</div>


						<div class="row">

							<div class="col-12 col-lg-12">
								<div class="card radius-15">
									<div class="card-header border-bottom-0">
										<div class="d-flex align-items-center">
											<div>
												<h5 class="mb-0">Parent's Guide</h5>
											</div>

										</div>
									</div>
									<div class=" card-body">

										<div class="col-12 row">

											<div id="accordion1" class="accordion">
												<div class="card radius-15">
													

													{% for gd in guide %}
														<div class="card-header collapsed" data-toggle="collapse" href="#collapse{{gd.record_id}}">
															<a class="card-title">
																{{gd.question}}
															</a>
														</div>
														<div id="collapse{{gd.record_id}}" class="card-body collapse" data-parent="#accordion1">
															<p>{{gd.answer}}</p>
														</div>	
													{% endfor %}												
												</div>
											</div>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>
				</body>
				<!--header-->


			{% endblock %}

			{% block pageScripts %}
				<!--pg scripts-->
				<script src="{{ asset('resources/portal/plugins/vectormap/jquery-jvectormap-2.0.2.min.js') }}"></script>
				<script src="{{ asset('resources/portal/plugins/vectormap/jquery-jvectormap-world-mill-en.js') }}"></script>
				<script src="{{ asset('resources/portal/plugins/vectormap/jquery-jvectormap-in-mill.js') }}"></script>
				<script src="{{ asset('resources/portal/plugins/vectormap/jquery-jvectormap-us-aea-en.js') }}"></script>
				<script src="{{ asset('resources/portal/plugins/vectormap/jquery-jvectormap-uk-mill-en.js') }}"></script>
				<script src="{{ asset('resources/portal/plugins/vectormap/jquery-jvectormap-au-mill.js') }}"></script>
				<script src="{{ asset('resources/portal/plugins/apexcharts-bundle/js/apexcharts.min.js') }}"></script>
				{# <script src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap4.min.js"></script> #}

				{# <script src="{{ asset('resources/portal/js/index2.js') }}"></script> #}
				<script src="{{ asset('resources/portal/func/dashboard/dash.js') }}"></script>
			{% endblock %}
