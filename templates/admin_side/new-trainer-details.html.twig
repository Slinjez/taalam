{% block head %}
	{{ parent() }}
	<style>
		.footer {
			position: relative;
		}
	</style>
	<style>
		.footer {
			position: relative;
		}
	</style>
{% endblock %}


{% block mainContent %}

	<body
		class="bg-theme bg-theme1">
		<!-- wrapper -->
		<div
			class="wrapper">
			<!--sidebar-wrapper-->
			{% block sidenav %}
				{{ parent() }}
			{% endblock %}
			<!--end sidebar-wrapper-->
			<!--header-->
			{% block topnav %}
				{{ parent() }}
			{% endblock %}
			<!--end header-->
			<!--page-wrapper-->
			<!--page-wrapper-->
				<div
				class="page-wrapper"> <!--page-content-wrapper-->
				<div class="page-content-wrapper">
					<div
						class="page-content">
						<!--breadcrumb-->
						<div class="mb-3 page-breadcrumb d-none d-md-flex align-items-center">
							<div class="pr-3 breadcrumb-title">Profile view</div>
							<div class="pl-3">
								<nav aria-label="breadcrumb">
									<ol class="p-0 mb-0 breadcrumb">
										<li class="breadcrumb-item">
											<a href="/admin-dash">
												<i class='bx bx-home-alt'></i>
											</a>
										</li>
										<li class="breadcrumb-item active" aria-current="page">Trainer Profile</li>
									</ol>
								</nav>
							</div>
							<div class="ml-auto">
								<div class="btn-group">
									<button type="button" class="btn btn-light">Settings</button>
									<button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
										<span class="sr-only">Toggle Dropdown</span>
									</button>
									<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
										<a class="dropdown-item" href="javascript:;">Action</a>
										<a class="dropdown-item" href="javascript:;">Change Password</a>
										<a class="dropdown-item" href="javascript:;">Deactivate Account</a>
									</div>
								</div>
							</div>
						</div>
						<!--end breadcrumb-->
						<div class="user-profile-page">
							<div class="card radius-15">
								<div class="card-body">
									<div class="row">
										<div class="col-12 col-lg-7 border-right">
											<div class="d-md-flex align-items-center">
												<div class="mb-3 mb-md-0">
													<i class="bx bx-user bx-lg" width="130" height="130"></i>
													{# <img src="assets/images/avatars/avatar-1.png" class="shadow rounded-circle" width="130" height="130" alt="" /> #}
												</div>
												<div class="ml-md-4 flex-grow-1">
													<div class="mb-1 d-flex align-items-center">
														<h4 class="mb-0 portal-user-name_over"></h4>
														{# <p class="mb-0 ml-auto">$44/hr</p> #}
													</div>
													<p class="mb-0">Role: Trainer
													</p>
													{# <p>
																																																					<i class='bx bx-buildings'></i>
																																																					<span class="location-span"></span>
																																																				</p> #}
													{# <button type="button" class="btn btn-light">Connect</button>
																																																																													<button type="button" class="ml-2 btn btn-light">Resume</button> #}
												</div>
											</div>
										</div>
										<div class="col-12 col-lg-5">
											<table class="table mt-3 table-sm table-borderless mt-md-0">
												<tbody>

													<tr>
														<th>Phone:</th>
														<td>
															<span class="phone"></span>
														</td>
													</tr>
													<tr>
														<th>Email:</th>
														<td>
															<span class="email_address"></span>
														</td>
													</tr>
													<tr>
														<th>Member Since:</th>
														<td>
															<span id="member-since"></span>
														</td>
													</tr>
												</tbody>
											</table>
										</div>
									</div>
									<!--end row-->
									<ul class="nav nav-pills">
										<li class="nav-item">
											<a class="nav-link active" id="profile-tab" data-toggle="tab" href="#Biography">
												<span class="p-tab-name">Biography</span>
												<i class='bx bxs-user-rectangle font-24 d-sm-none'></i>
											</a>
										</li>
										<li class="nav-item">
											<a class="nav-link" data-toggle="tab" href="#Edit-Profile">
												<span class="p-tab-name">More Details and Files</span>
												<i class='bx bx-message-edit font-24 d-sm-none'></i>
											</a>
										</li>
									</ul>
									<div class="mt-3 tab-content">
										<div class="tab-pane fade show active" id="Biography">
											<div class="row">
												<div class="col-lg-4">
													<div class="mb-0 border shadow-none card">
														<div class="card-body">
															<h5 class="mb-3">Notes</h5>
														</div>
														<ul class="list-group list-group-flush">
															<li class="list-group-item">
																<p class="mb-0">
																	<i class='bx bxs-arrow-to-right'></i>
																	To activate the trainer profile, click on Activate Account
																</p>
															</li>
															<li class="list-group-item">
																<p class="mb-0">
																	<i class='bx bxs-arrow-to-right'></i>
																	To de-activate the trainer profile, click on Reject Request
																</p>
															</li>
														</ul>
													</div>
												</div>
												<div class="col-lg-8">
													<div class="mb-0 border shadow-none card radius-15">
														<div class="card-body">
															<h5 class="mb-3">Activation</h5>
															<div class="col-12">
																		<div class="col-12 alerts-div">
																			<div class="col-md-1"></div>
																			<div class="col-md-10">
																				<div class="removebioMessages"></div>
																				<div class="ajaxbioloader"></div>
																			</div>
																			<div class="col-md-1"></div>
																		</div>
																	</div>

															<div class="row">
																<div class="col-md-8">
																	<div class="mt-4 form-group">
																		<label>Remarks</label>
																		<textarea class="form-control" rows="5" cols="50" name="tag-line" id="remarks"></textarea>
																	</div>
																</div>
																<div class="col-md-4">
																	<div class="col-md-12">
																		<button class="btn btn-primary btn-block" id="activate-acc">Activate account</button>
																	</div>
																	<div class="col-md-12">&nbsp;</div>
																	<div class="col-md-12">
																		<button class="btn btn-danger btn-block" id="reject-acc">Reject Request</button>
																	</div>
																</div>
															</div>

															<hr>
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="tab-pane fade" id="Edit-Profile">
											<div class="mb-0 border shadow-none card radius-15">
												<div class="card-body">
													<div class="col-12">
														<div class="col-12 alerts-div">
															<div class="col-md-1"></div>
															<div class="col-md-10">
																<div class="removebioMessages"></div>
																<div class="ajaxbioloader"></div>
															</div>
															<div class="col-md-1"></div>
														</div>
													</div>
													<div class="col-12 row" style="display: block;">
													<p><strong>Location:</strong><span class="location"></span></p>
													<p><strong>Bio:</strong><span class="bio"></span></p>
													<p><strong>Education Qualification:</strong><span class="education_qualification"></span></p>
													<p><strong>Bio:</strong><span class="bio"></span></p>
													
													<p><strong>Competencies:</strong><br><span class="competencies"></span></p><br>
													<hr>
													<h4>Fetched files</h4>
													</div>
													<div class="col-12 " id="files-view"></div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!--end page-content-wrapper-->
			</div>
			<!--end page-wrapper-->
		</div>
