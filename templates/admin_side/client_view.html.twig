{% extends "layouts/portallayoutadmin.html.twig" %}

{% block head %}
	{{ parent() }}
	<link href="{{ asset('resources/portal/plugins/select2/css/select2.min.css') }}" rel="stylesheet"/>
	<link href="{{ asset('resources/portal/plugins/select2/css/select2-bootstrap4.css') }}" rel="stylesheet"/>
	<link href="{{ asset('resources/portal/plugins/fontawesome-free-5.15.4-web/css/all.min.css') }}" rel="stylesheet"/>
	<link rel="stylesheet" href="{{ asset('resources/portal/plugins/notifications/css/lobibox.min.css') }}"/>
	<style>
		.footer {
			position: absolute;
		}
	</style>
{% endblock %}


{% block mainContent %}

	<body
		class="bg-theme bg-theme1">
		<!-- wrapper -->
		<div
			class="wrapper">
			<!--sidebar-wrapper-->
			{% block sidenav %}
				{{ parent() }}
			{% endblock %}
			<!--end sidebar-wrapper-->
			<!--header-->
			{% block topnav %}
				{{ parent() }}
			{% endblock %}
			<!--end header-->
			<!--page-wrapper-->
			<!--page-wrapper-->
				<div
				class="page-wrapper"> <!--page-content-wrapper-->
				<div class="page-content-wrapper">
					<div
						class="page-content">
						<!--breadcrumb-->
						<div class="mb-3 page-breadcrumb d-none d-md-flex align-items-center">
							<div class="pr-3 breadcrumb-title">{{page_name}}</div>
							<div class="pl-3">
								<nav aria-label="breadcrumb">
									<ol class="p-0 mb-0 breadcrumb">
										<li class="breadcrumb-item">
											<a href="/admin-dash">
												<i class='bx bx-home-alt'></i>
											</a>
										</li>
										<li class="breadcrumb-item active" aria-current="page">{{page_description}}</li>
									</ol>
								</nav>
							</div>

						</div>
						<!--end breadcrumb-->
						<div class="card">
							<div class="card-body">
								<div class="card-title">
									<h4 class="mb-0">{{page_description}}</h4>
								</div>
								<hr/>

								<div class="col-12 row loading-div hide-me">
									<div class="col-12 alerts-div">
										<div class="col-md-1"></div>
										<div class="col-md-10">
											<div class="removeDataMessages"></div>
											<div class="ajaxDataloader"></div>
										</div>
										<div class="col-md-1"></div>
									</div>
								</div>

								<table class="table mb-0">
									<thead>
										<tr>
											<th>User Name</th>
											<th>Email Address</th>
											<th>Phone</th>
											<th>Date of Joining</th>
											<th>Status</th>
										</tr>
									</thead>
									<tbody id="clients-body"></tbody>
								</table>

								<h2>MEMBER KIDS</h2>

								<table id="my-sessions" class="table table-striped table-bordered table-hover" style="width:100%">
									<thead>
										<tr>
											<th>Parent</th>
											<th>Child Name</th>
											<th>Age</th>
											<th>Status</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody></tbody>

								</table>

							</div>
						</div>
					</div>
				</div>
				<!--end page-content-wrapper-->
			</div>
			<!--end page-wrapper-->
		</div>
	</body>
	<!--header-->

	<!--modals-->
	<div class="modal fade" id="preview" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-lg modal-dialog-scrollable">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Preview</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="col-12">
						<p>
							<strong>Name</strong>
						</p>
						<p id="preview-name"></p>
						<p>
							<strong>Age</strong>
						</p>
						<p id="age"></p>


						<p>
							<strong>Created on</strong>
						</p>
						<p id="display_date"></p>

						<p>
							<strong>Allergies</strong>
						</p>
						<p id="allergies"></p>


						<p>
							<strong>Medical Conditions</strong>
						</p>
						<p id="medical_conditions"></p>


						<p>
							<strong>Special Needs</strong>
						</p>
						<p id="special_needs"></p>

						<p>
							<strong>Behavioral Conditions</strong>
						</p>
						<p id="behavioral_conditions"></p>

						<p>
							<strong>Special Needs</strong>
						</p>
						<div class="col-12" id="special_need_list"></div>
					</div>

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
					{# <a id="edit-kid" href="#" id="new-event" class="btn btn-light new-event-btn">Edit</a> #}
				</div>
			</div>
		</div>
	</div>
	<!--modals-->
	<!--end header-->
{% endblock %}
{% block pageScripts %}
	<!--Data Tables js-->
	<script src="{{ asset('resources/portal/plugins/datatable/js/jquery.dataTables.min.js') }}"></script>
	<script src="{{ asset('resources/portal/plugins/simple-rich-text-editor/script.js') }}"></script>
	<script src="{{ asset('resources/portal/plugins/select2/js/select2.min.js') }}"></script>
	{# <script src="{{ asset('resources/portal/func/trainers/new-event.js') }}"></script> #}
	<script src="{{ asset('resources/portal/plugins/notifications/js/lobibox.min.js') }}"></script>
	<script src="{{ asset('resources/portal/plugins/notifications/js/notifications.min.js') }}"></script>
	<script src="{{ asset('resources/portal/plugins/notifications/js/notification-custom-script.js') }}"></script>

	<script src="{{ asset('resources/portal/adminfunc/clients/view-clients.js') }}"></script>


{% endblock %}
