{% extends "layouts/portallayoutadmin.html.twig" %}

{% block head %}
	{{ parent() }}
	<style>
		.footer {
			position: absolute;
		}
	</style>
{% endblock %}


{% block mainContent %}

	<body
		class="bg-theme bg-theme1">
		<!-- wrapper -->
		<div
			class="wrapper">
			<!--sidebar-wrapper-->
			{% block sidenav %}
				{{ parent() }}
			{% endblock %}
			<!--end sidebar-wrapper-->
			<!--header-->
			{% block topnav %}
				{{ parent() }}
			{% endblock %}
			<!--end header-->
			<!--page-wrapper-->
			<!--page-wrapper-->
				<div
				class="page-wrapper"> <!--page-content-wrapper-->
				<div class="page-content-wrapper">
					<div
						class="page-content">
						<!--breadcrumb-->
						<div class="mb-3 page-breadcrumb d-none d-md-flex align-items-center">
							<div class="pr-3 breadcrumb-title">{{page_name}}</div>
							<div class="pl-3">
								<nav aria-label="breadcrumb">
									<ol class="p-0 mb-0 breadcrumb">
										<li class="breadcrumb-item">
											<a href="/admin-dash">
												<i class='bx bx-home-alt'></i>
											</a>
										</li>
										<li class="breadcrumb-item active" aria-current="page">{{page_description}}</li>
									</ol>
								</nav>
							</div>

							<div class="ml-auto">
								<div class="btn-group">
									<button type="button" class="btn btn-light">Options</button>
									<button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
										<span class="sr-only">Toggle Dropdown</span>
									</button>
									<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
										<a class="dropdown-item" href="javascript:;" data-toggle="modal" data-target="#new-faq-modal">New Guide</a>
									</div>
								</div>
							</div>

						</div>
						<!--end breadcrumb-->
						<div class="card">
							<div class="card-body">
								<div class="card-title">
									<h4 class="mb-0">{{page_description}}</h4>
								</div>
								<hr/>

								<div class="col-12 row loading-div hide-me">
									<div class="col-12 alerts-div">
										<div class="col-md-1"></div>
										<div class="col-md-10">
											<div class="removeDataMessages"></div>
											<div class="ajaxDataloader"></div>
										</div>
										<div class="col-md-1"></div>
									</div>
								</div>

								<div class="table-responsive">

									<table id="my-sessions" class="table table-striped table-bordered table-hover" style="width:100%">
										<thead>
											<tr>
												<th>Question</th>
												<th>Answer</th>
												<th>Date</th>
												<th>Status</th>
												<th>Action</th>
											</tr>
										</thead>
										<tbody></tbody>
										<!--<tfoot>
																					<tr>
																						<th>Shelf</th>
																						<th>Item Description</th>
																						<th>Shelved On</th>
																						<th>Available Units</th>
																					</tr>
																				</tfoot>-->
									</table>
								</div>

							</div>
						</div>
					</div>
				</div>
				<!--end page-content-wrapper-->
			</div>
			<!--end page-wrapper-->
		</div>
	</body>
	<!--header-->

	<!--modal-->
	<div class="modal fade" id="new-faq-modal" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">New Guide</h5>
					<input type="hidden" id="trainer-id-rate-msg">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<form id="message-form">
					<div class="modal-body">

						<div class="form-row">
							<div class="col-md-12">
								<div class="form-group col-12">
									<label>Question</label>
									<input class="form-control" type="text" name="faq-question" id="faq-question">
								</div>
							</div>
						</div>
						<div class="form-row">
							<div class="col-12">
								<div class="form-group col-12">
									<label>Description</label>
									<textarea class="form-control" rows="4" cols="50" id="msg-extra-info"></textarea>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
						<button type="submit" class="btn btn-light">Save Guide</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!--end modal-->

    
	<!--modal-->
	<div class="modal fade" id="new-faq-modal-ed" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Edit Guide</h5>
					<input type="hidden" id="trainer-id-rate-msg">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<form id="message-form-ed">
					<div class="modal-body">
                        <input id="faq-id" type="hidden">
						<div class="form-row">
							<div class="col-md-12">
								<div class="form-group col-12">
									<label>Question</label>
									<input class="form-control" type="text" name="faq-question-ed" id="faq-question-ed">
								</div>
							</div>
						</div>
						<div class="form-row">
							<div class="col-12">
								<div class="form-group col-12">
									<label>Description</label>
									<textarea class="form-control" rows="4" cols="50" id="msg-extra-info-ed"></textarea>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
						<button type="submit" class="btn btn-light">Save Guide</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!--end modal-->
	<!--end header-->
{% endblock %}
{% block pageScripts %}
	<!--Data Tables js-->
	<script src="{{ asset('resources/portal/plugins/datatable/js/jquery.dataTables.min.js') }}"></script>

	<script src="{{ asset('resources/portal/adminfunc/cms/guide/guide.js') }}"></script>


{% endblock %}
