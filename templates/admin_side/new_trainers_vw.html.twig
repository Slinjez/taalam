{% extends "layouts/portallayoutadmin.html.twig" %}

{% block head %}
	{{ parent() }}
{% endblock %}


{% block mainContent %}

	<body
		class="bg-theme bg-theme1">
		<!-- wrapper -->
		<div class="wrapper">
			<!--sidebar-wrapper-->
			{% block sidenav %}
				{{ parent() }}
			{% endblock %}
			<!--end sidebar-wrapper-->
			<!--header-->
			{% block topnav %}
				{{ parent() }}
			{% endblock %}
			<!--end header-->
			<!--page-wrapper-->
			<!--page-wrapper-->
				<div class="page-wrapper"> <!--page-content-wrapper-->
				<div class="page-content-wrapper">
					<div class="page-content">
						<!--breadcrumb-->
						<div class="mb-3 page-breadcrumb d-none d-md-flex align-items-center">
							<div class="pr-3 breadcrumb-title">{{page_name}}</div>
							<div class="pl-3">
								<nav aria-label="breadcrumb">
									<ol class="p-0 mb-0 breadcrumb">
										<li class="breadcrumb-item">
											<a href="/admin-dash">
												<i class='bx bx-home-alt'></i>
											</a>
										</li>
										<li class="breadcrumb-item active" aria-current="page">{{page_description}}</li>
									</ol>
								</nav>
							</div>

							
						<div class="ml-auto">
							<div class="btn-group">
								<button type="button" class="btn btn-light">Settings</button>
								<button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">	<span class="sr-only">Toggle Dropdown</span>
								</button>
								<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">	<a class="dropdown-item" href="javascript:;">New Trainers</a>
									<a class="dropdown-item" href="javascript:;">Trainers Management</a>
									<div class="dropdown-divider"></div>	
									<a class="dropdown-item" href="javascript:;">Client Assignement</a>
								</div>
							</div>
						</div>
						</div>
						<!--end breadcrumb-->
						<div class="card">
							<div class="card-body">
								<div class="card-title">
									<h4 class="mb-0">Trainers</h4>
								</div>
								<hr/>
								<div class="table-responsive">
								
									<table id="new-trainers" class="table table-striped table-bordered table-hover" style="width:100%">
										<thead>
											<tr>
												<th>Name</th>
												<th>Email Address</th>
												<th>Phone</th>
												<th>Date of joining</th>
												<th>Action</th>
											</tr>
										</thead>
										<tbody>
										
										</tbody>
										<!--<tfoot>
											<tr>
												<th>Shelf</th>
												<th>Item Description</th>
												<th>Shelved On</th>
												<th>Available Units</th>
											</tr>
										</tfoot>-->
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!--end page-content-wrapper-->
			</div>
			<!--end page-wrapper-->
		</div>
	</body>
	<!--header-->
	{% block footer %} {{ parent() }} {% endblock %}

	<!--end header-->
{% endblock %}
{% block pageScripts %}
		<!--Data Tables js-->
		<script src="{{ asset('resources/portal/plugins/datatable/js/jquery.dataTables.min.js') }}"></script>
		
		<script src="{{ asset('resources/portal/adminfunc/clients/new_trainers.js') }}"></script>
		

{% endblock %}